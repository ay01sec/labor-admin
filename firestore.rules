rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーの権限情報を取得する関数
    function getUserData(companyId) {
      return get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data;
    }

    // ユーザーが存在するかどうか
    function userExists(companyId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid));
    }

    // 管理者かどうか
    function isAdmin(companyId) {
      let userData = getUserData(companyId);
      return userData != null && userData.role == 'admin';
    }

    // 事務員以上かどうか（admin, office, manager）
    function isOfficeOrAbove(companyId) {
      let userData = getUserData(companyId);
      return userData != null && (
        userData.role == 'admin' ||
        userData.role == 'office' ||
        userData.role == 'manager'
      );
    }

    // 現場管理者以上かどうか
    function isSiteManagerOrAbove(companyId) {
      let userData = getUserData(companyId);
      return userData != null && (
        userData.role == 'admin' ||
        userData.role == 'office' ||
        userData.role == 'manager' ||
        userData.role == 'site_manager'
      );
    }

    // 企業ドキュメント
    match /companies/{companyId} {
      // 認証済みユーザーが読み取り可能（ログイン時の企業検索用）
      allow read: if request.auth != null;
      // 管理者のみ更新可能（銀行情報・決済情報の変更）
      allow write: if request.auth != null && isAdmin(companyId);

      // ユーザーコレクション
      match /users/{userId} {
        // 認証済みユーザーが自分のドキュメントを読み取り可能（ログイン確認用）
        // または事務員以上が全ユーザーを読み取り可能
        allow read: if request.auth != null && (
          request.auth.uid == userId || isOfficeOrAbove(companyId)
        );
        // 自分自身のドキュメントは更新可能（lastLoginAt更新用）
        // または事務員以上が全ユーザーを書き込み可能
        allow write: if request.auth != null && (
          request.auth.uid == userId || isOfficeOrAbove(companyId)
        );
      }

      // 社員コレクション
      match /employees/{employeeId} {
        allow read, write: if request.auth != null && isOfficeOrAbove(companyId);
      }

      // 取引先コレクション
      match /clients/{clientId} {
        allow read, write: if request.auth != null && isOfficeOrAbove(companyId);
      }

      // 現場コレクション
      match /sites/{siteId} {
        allow read: if request.auth != null && isSiteManagerOrAbove(companyId);
        allow write: if request.auth != null && isOfficeOrAbove(companyId);
      }

      // 日報コレクション
      match /dailyReports/{reportId} {
        allow read: if request.auth != null && isSiteManagerOrAbove(companyId);
        allow write: if request.auth != null && isSiteManagerOrAbove(companyId);
      }

      // その他のサブコレクション（汎用）
      match /{document=**} {
        allow read, write: if request.auth != null && isOfficeOrAbove(companyId);
      }
    }

    // カスタム通知コレクション
    match /customNotifications/{notificationId} {
      allow read, write: if request.auth != null;
    }

    // 2FAコードコレクション（Cloud Functionsからのみアクセス）
    match /twoFactorCodes/{codeId} {
      allow read, write: if false;
    }
  }
}
